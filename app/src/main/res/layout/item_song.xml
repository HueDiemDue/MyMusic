<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avt_music"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_avt_song" />

        <LinearLayout
            android:id="@+id/lnnName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_avt_music"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tvNameSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Name Song"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvNameArist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Name Arist" />

        </LinearLayout>
        <TextView
            android:id="@+id/tvDetailSong"
            android:layout_toRightOf="@id/lnnName"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_back"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#334455" />
</LinearLayout>